---
import BaseLayout from '../layouts/BaseLayout.astro';
import GalleryComponent from '../components/Gallery.astro';
import { images } from '../data/gallery';
---

<BaseLayout title="Photo Gallery">
    <div class="container mx-auto">
        <h1 class="text-4xl font-bold text-center my-8 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Photo Gallery</h1>
        <GalleryComponent images={images} />
    </div>
</BaseLayout>

<style>
    .grid {
        margin: 0 auto;
        max-width: 1400px;
    }
</style>
