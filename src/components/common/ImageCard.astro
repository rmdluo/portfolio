---
import type { ImageCardProps, AspectRatio, Size } from '../../types/ImageCardProps';

import { Picture } from 'astro:assets';

const { src, alt, caption, aspectRatio = "landscape", size = "medium", unedited_src } = Astro.props as ImageCardProps;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/gallery/{before,after}/*.{jpeg,jpg,png,gif}');

const sizeClass: Record<Size, string> = {
    small: "w-48", // 192px
    medium: "w-72", // 288px
    large: "w-96", // 384px
    full: "w-full",
    dynamic: "w-dynamic"
};

const className = sizeClass[size];
---

<div class={`image-card ${className}`} tabindex="0" role="button" aria-label={`View ${alt} in full screen`}>
    <div class="image-container" data-unedited-src={unedited_src}>
        <Picture  
            src={images[src]()} 
            alt={alt}
        />
        <div class="expand-hint">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
            </svg>
        </div>
    </div>
    {caption && (
        <p class="caption">{caption}</p>
    )}
</div>

<!-- Full screen modal -->
<div class="fullscreen-modal" role="dialog" aria-label="Full screen image view">
    <div class="modal-overlay"></div>
    <div class="modal-content">
        <div class="modal-image-container">
            <div class="edited-image">
                <Picture 
                    src={images[src]()} 
                    alt={alt} 
                    class="modal-image" 
                />
            </div>
            {unedited_src && (
                <div class="unedited-image">
                    <Picture 
                        src={images[unedited_src]()} 
                        alt={`Unedited version of ${alt}`} 
                        class="modal-image" 
                    />
                </div>
            )}
        </div>
        <div class="modal-controls">
            {unedited_src && (
                <div class="toggle-section">
                    <label class="toggle-container">
                        <input type="checkbox" class="toggle-unedited" />
                        <span class="toggle-label">Show Unedited</span>
                    </label>
                    <p class="toggle-note">Press and hold image to preview unedited version</p>
                </div>
            )}
            {caption && (
                <p class="modal-caption">{caption}</p>
            )}
        </div>
        <button class="close-button" aria-label="Close full screen view">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
</div>

<style>
    .image-card {
        position: relative;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        outline: none; /* Remove default focus outline */
    }

    .image-card:focus-visible {
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
    }

    /* Tailwind width classes */
    .w-48 {
        width: 12rem;
    }

    .w-72 {
        width: 18rem;
    }

    .w-96 {
        width: 24rem;
    }

    .w-full {
        width: 100%;
    }

    .w-dynamic {
        width: 100%;
        max-width: var(--min-image-width, 24rem);
    }

    .image-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    .image-container {
        position: relative;
        width: 100%;
        overflow: hidden;
    }

    .image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .expand-hint {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        transform: scale(0.8);
        padding: 0.5rem;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        border-radius: 50%;
        color: #1a1a1a;
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 2;
    }

    .image-card:hover .expand-hint {
        opacity: 0.9;
        transform: scale(1);
    }

    .image-card:hover .image {
        transform: scale(1.05);
    }

    .caption {
        padding: 1rem;
        font-size: 0.875rem;
        color: #4B5563;
        text-align: center;
        background: white;
        pointer-events: none;
    }

    /* Fullscreen Modal */
    .fullscreen-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        visibility: hidden;
        pointer-events: none;
    }

    .modal-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(17, 17, 17, 0.95);
        opacity: 0;
        transition: opacity 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        backdrop-filter: blur(8px);
    }

    .modal-content {
        position: relative;
        width: 100%;
        height: 100%;
        max-width: 1800px;
        margin: auto;
        opacity: 0;
        transform: scale(0.95) translateY(10px);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 2rem;
        pointer-events: none; /* Make content non-interactive by default */
    }

    .fullscreen-modal.active {
        visibility: visible;
        pointer-events: auto;
    }

    .fullscreen-modal.active .modal-overlay {
        opacity: 1;
    }

    .fullscreen-modal.active .modal-content {
        opacity: 1;
        transform: scale(1) translateY(0);
    }

    .fullscreen-modal.active .modal-image-container,
    .fullscreen-modal.active .modal-controls,
    .fullscreen-modal.active .close-button {
        pointer-events: auto; /* Make interactive elements clickable when modal is active */
    }

    .modal-image-container {
        position: relative;
        width: 100%;
        width: fit-content;
        height: fit-content;
        /* max-width: 100vw;
        max-height: 85vh; */
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        border-radius: 12px;
        pointer-events: none;
    }

    .edited-image, .unedited-image {
        position: relative;
        width: fit-content;
        height: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .edited-image {
        opacity: 1;
    }

    .unedited-image {
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        pointer-events: none;
    }

    .unedited-image.visible {
        opacity: 1;
        pointer-events: auto;
    }

    .edited-image.hidden {
        opacity: 0;
        pointer-events: none;
    }

    .modal-image {
        display: block;
        max-width: 80vw;
        max-height: 70vh;
        width: auto;
        height: auto;
        object-fit: contain;
        margin: 0 auto;
        border-radius: 8px;
    }

    .modal-controls {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        background: rgba(0, 0, 0, 0.75);
        padding: 1rem 1.5rem;
        border-radius: 16px;
        backdrop-filter: blur(8px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        margin-top: 0.1rem;
    }

    .toggle-container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        font-size: 0.875rem;
        cursor: pointer;
        opacity: 0.9;
        transition: all 0.2s ease;
        padding: 0.5rem 0.75rem;
        border-radius: 1.5rem;
        background: rgba(255, 255, 255, 0.1);
    }

    .toggle-container:hover {
        opacity: 1;
        background: rgba(255, 255, 255, 0.15);
    }

    .toggle-unedited {
        appearance: none;
        width: 2.75rem;
        height: 1.5rem;
        border-radius: 1rem;
        background: rgba(255, 255, 255, 0.2);
        cursor: pointer;
        position: relative;
        transition: all 0.2s ease;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .toggle-unedited::after {
        content: '';
        position: absolute;
        top: 0.15rem;
        left: 0.15rem;
        width: 1rem;
        height: 1rem;
        background: white;
        border-radius: 50%;
        transition: transform 0.2s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .toggle-unedited:checked {
        background: rgba(255, 255, 255, 0.9);
        border-color: white;
    }

    .toggle-unedited:checked::after {
        transform: translateX(1.25rem);
    }

    .toggle-label {
        user-select: none;
        font-weight: 500;
        letter-spacing: 0.02em;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .modal-caption {
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.875rem;
        text-align: center;
        max-width: 600px;
        line-height: 1.5;
        margin: 0;
    }

    .close-button {
        position: fixed;
        top: 1.5rem;
        right: 1.5rem;
        background: rgba(0, 0, 0, 0.75);
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.75rem;
        opacity: 0;
        transform: scale(0.9);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        border-radius: 50%;
        z-index: 10;
        backdrop-filter: blur(8px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .fullscreen-modal.active .close-button {
        opacity: 1;
        transform: scale(1);
    }

    .close-button:hover {
        transform: scale(1.1);
        background: rgba(0, 0, 0, 0.85);
    }

    .toggle-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .toggle-note {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.75rem;
        text-align: center;
        max-width: 200px;
        line-height: 1.4;
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {
        .modal-content {
            padding: 1rem;
            justify-content: flex-start;
            padding-top: 4rem;
        }

        .modal-image-container {
            max-width: 100vw;
            max-height: 70vh;
            border-radius: 8px;
        }

        .modal-image {
            max-height: 70vh;
        }

        .modal-controls {
            padding: 0.75rem 1rem;
            width: calc(100% - 2rem);
            max-width: 400px;
            margin-top: 0.75rem;
        }

        .close-button {
            top: 1rem;
            right: 1rem;
            padding: 0.5rem;
        }

        .toggle-container {
            padding: 0.375rem 0.625rem;
        }
    }
</style>

<script>
    // Find all image cards and modals
    const cards = document.querySelectorAll('.image-card');
    const modals = document.querySelectorAll('.fullscreen-modal');
    
    cards.forEach((card, index) => {
        const container = card.querySelector('.image-container');
        const img = container?.querySelector('img');
        const modal = modals[index];
        const closeButton = modal?.querySelector('.close-button');
        const editedImage = modal?.querySelector('.edited-image') as HTMLElement;
        const uneditedImage = modal?.querySelector('.unedited-image') as HTMLElement;
        const toggleCheckbox = modal?.querySelector('.toggle-unedited') as HTMLInputElement;

        // Preload unedited image
        if (uneditedImage) {
            const uneditedImg = uneditedImage.querySelector('img');
            if (uneditedImg) {
                // Force the browser to load the image
                const tempImg = new Image();
                tempImg.src = uneditedImg.src;
                tempImg.onload = () => {
                    console.log('Unedited image preloaded');
                };
            }
        }
        
        if (img) {
            // When image loads
            img.onload = () => {
                container?.classList.add('loaded');
            };

            // If image is already cached and loaded
            if (img.complete) {
                container?.classList.add('loaded');
            }
        }

        // Add press and hold functionality
        let pressTimer: ReturnType<typeof setTimeout>;
        
        const showUnedited = () => {
            editedImage?.classList.add('hidden');
            uneditedImage?.classList.add('visible');
        };

        const showEdited = () => {
            editedImage?.classList.remove('hidden');
            uneditedImage?.classList.remove('visible');
        };

        // Mouse events for the modal image container
        const modalImageContainer = modal?.querySelector('.modal-image-container');
        modalImageContainer?.addEventListener('mousedown', () => {
            pressTimer = setTimeout(showUnedited, 200);
        });

        modalImageContainer?.addEventListener('mouseup', () => {
            clearTimeout(pressTimer);
            if (!toggleCheckbox?.checked) {
                showEdited();
            }
        });

        modalImageContainer?.addEventListener('mouseleave', () => {
            clearTimeout(pressTimer);
            if (!toggleCheckbox?.checked) {
                showEdited();
            }
        });

        // Touch events
        modalImageContainer?.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Prevent default touch behavior
            pressTimer = setTimeout(showUnedited, 200);
        });

        modalImageContainer?.addEventListener('touchend', () => {
            clearTimeout(pressTimer);
            if (!toggleCheckbox?.checked) {
                showEdited();
            }
        });

        modalImageContainer?.addEventListener('touchcancel', () => {
            clearTimeout(pressTimer);
            if (!toggleCheckbox?.checked) {
                showEdited();
            }
        });

        // Handle toggle checkbox
        toggleCheckbox?.addEventListener('change', () => {
            if (toggleCheckbox.checked) {
                showUnedited();
            } else {
                showEdited();
            }
        });

        // Open modal on card click or Enter/Space key
        const openModal = () => {
            modal?.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Reset checkbox and show edited image when opening modal
            if (toggleCheckbox) {
                toggleCheckbox.checked = false;
            }
            showEdited();
        };

        card.addEventListener('click', openModal);
        card.addEventListener('keydown', (e: Event) => {
            const keyEvent = e as KeyboardEvent;
            if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
                e.preventDefault();
                openModal();
            }
        });

        // Close modal on close button click
        closeButton?.addEventListener('click', () => {
            modal?.classList.remove('active');
            setTimeout(() => {
                document.body.style.overflow = '';
            }, 500); // Match the transition duration
        });

        // Close modal when clicking outside the image
        modal?.addEventListener('click', (e) => {
            const target = e.target as HTMLElement;
            // Only close if clicking on the modal or overlay
            if (target.classList.contains('fullscreen-modal') || target.classList.contains('modal-overlay')) {
                modal.classList.remove('active');
                setTimeout(() => {
                    document.body.style.overflow = '';
                }, 500); // Match the transition duration
            }
        });
    });

    // Close modal on escape key
    document.addEventListener('keydown', (e: Event) => {
        const keyEvent = e as KeyboardEvent;
        if (keyEvent.key === 'Escape') {
            document.querySelectorAll('.fullscreen-modal.active').forEach(modal => {
                modal.classList.remove('active');
                setTimeout(() => {
                    document.body.style.overflow = '';
                }, 500); // Match the transition duration
            });
        }
    });
</script> 