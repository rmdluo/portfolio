---
import Card from './Card.astro';
import type { CardProps } from '../../types/CardProps';

const { title, description, tags, classes: classNames, href } = Astro.props as CardProps & { classes?: string[], onclick?: () => void };

// Combine our classes with any passed in classes
const combinedClasses = ['hoverable-card', ...(classNames || [])];
---

<Card 
    title={title}
    description={description}
    tags={tags}
    classes={[combinedClasses]}
    href={href}
>
    <slot />
</Card>

<style>
    :global(.hoverable-card) {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    :global(.hoverable-card:hover) {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(50, 69, 255, 0.1);
    }
</style> 