---
import Card from './common/Card.astro';

import type { CardProps } from '../types/CardProps';

const projects: CardProps[] = [
    {
        title: "Self-Implementing GANs",
        description: "Generative Adversarial Networks that can implement their own architecture modifications during training.",
        tags: ["ML", "PyTorch", "GANs"]
    },
    {
        title: "Q-Learning Snake AI",
        description: "An AI agent that learns to play Snake using Q-learning reinforcement learning techniques.",
        tags: ["RL", "Python", "Q-Learning"]
    },
    {
        title: "Data Analytics Pipeline",
        description: "System for ingesting, analyzing, and disseminating data with advanced processing capabilities.",
        tags: ["Data", "Analytics", "Python"]
    }
];
---

<div class="projects-section">
    <h2 class="section-title">Featured Projects</h2>
    <div class="projects-grid">
        {projects.map((project: CardProps) => (
            <Card 
                title={project.title}
                description={project.description}
                tags={project.tags}
            />
        ))}
    </div>
</div>

<style>
    .section-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .projects-section {
        margin-top: 4rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 