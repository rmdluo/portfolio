<style>
    .about-container {
        width: 100%;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem 1rem;
        margin: 2rem 0;
    }

    .about-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .box {
        border: none;
    }

    h3 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: #6b7280;
    }

    .profile-section {
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 3rem;
        margin-bottom: 3rem;
        /* min-height: 250px; */
    }

    .text-header {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        /* min-height: 250px; */
    }

    .profile-image {
        width: 350px;
        height: 350px;
        flex-shrink: 0;
        border-radius: 16px;
        overflow: hidden;
        background: linear-gradient(83.21deg, rgba(50, 69, 255, 0.1) 0%, rgba(188, 82, 238, 0.1) 100%);
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .name {
        font-size: 2.5rem;
        font-weight: 600;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.3;
    }

    .name-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .contact-icons {
        display: flex;
        gap: 1.25rem;
        align-items: center;
    }

    .contact-icon {
        color: #6b7280;
        transition: color 0.3s ease;
        width: 1.5rem;
        height: 1.5rem;
    }

    .contact-icon:hover {
        color: #3245ff;
    }

    .tagline {
        font-size: 1.25rem;
        color: #6b7280;
        line-height: 1.4;
        margin-bottom: 0.75rem;
    }

    .education {
        font-size: 1.1rem;
        color: #6b7280;
        line-height: 1.4;
        margin-bottom: 1rem;
    }

    .description-text {
        max-width: 800px;
        margin: 0 auto;
    }

    .description {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        line-height: 1.7;
    }

    .skills-section {
        margin-top: auto;
        padding-top: 1rem;
        display: grid;
    }

    .skills-grid {
        display: grid;
        grid-template-rows: repeat(2, 1fr);
        grid-auto-flow: column;
        grid-auto-columns: 1fr;
        gap: 0.75rem;
        align-items: stretch;
        height: 100%;
    }

    .skill-item {
        background: linear-gradient(83.21deg, rgba(50, 69, 255, 0.1) 0%, rgba(188, 82, 238, 0.1) 100%);
        padding: 0.5rem;
        border-radius: 8px;
        text-align: center;
        font-size: 0.9rem;
        color: #111827;
        transition: transform 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }

    .skill-item:hover {
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .header-content {
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 2rem;
        }

        .text-header {
            min-height: auto;
        }

        .profile-image {
            width: 200px;
            height: 200px;
        }

        .name-section {
            align-items: center;
        }

        .contact-icons {
            justify-content: center;
        }

        .name {
            font-size: 2rem;
        }

        .tagline {
            font-size: 1.1rem;
        }

        .interests-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .skills-grid {
            grid-template-rows: repeat(4, 1fr);
            grid-template-columns: repeat(3, 1fr);
            grid-auto-flow: row;
        }
    }

    .section-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style> 