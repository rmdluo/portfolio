---
import ImageCard from './common/ImageCard.astro';
import type { ImageCardProps } from '../types/ImageCardProps';

const { images } = Astro.props;
---

<div class="gallery-container">
  <div class="gallery" id="gallery">
    {images.map((image: ImageCardProps) => (
      <div
        class={`image-wrapper ${(image.tags || [])
          .map(tag => `tag-${tag.replace(/\s+/g, '-')}`)
          .join(' ')}`}
      >
        <ImageCard {...image} />
      </div>
    ))}
  </div>
</div>

<style>
  .gallery-container {
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
  }

  .gallery {
    column-count: 4;
    column-gap: clamp(1rem, 2vw, 2rem);
    padding: clamp(1rem, 2vw, 2rem);
    width: 100%;
  }

  .image-wrapper {
    break-inside: avoid;
    margin-bottom: clamp(1rem, 2vw, 2rem);
  }

  .gallery :global(.image-card) {
    width: 100% !important;
  }

  @media (max-width: 1400px) {
    .gallery {
      column-count: 3;
    }
  }

  @media (max-width: 1024px) {
    .gallery {
      column-count: 2;
    }
  }

  @media (max-width: 640px) {
    .gallery {
      column-count: 1;
    }
  }
</style>